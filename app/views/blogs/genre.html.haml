%h2= @genre.name
- @data.each do |obj|
  %h3.top_title
    %a{:href => "/blogs/show/#{obj.id}"}
      = obj.title
  %p.top_read
    = obj.read
    %span.top_created
      (#{obj.created_at})
  %hr/
.navigate
  - if @page_num > 0 then
    %a{:href => "/blogs/genre/#{@genre.id.to_s + '/' + (@page_num - 1).to_s}"} ＜＜前のページへ
  %span
  %a{:href => "/blogs/genre/#{@genre.id.to_s + '/' + (@page_num + 1).to_s}"} 次のページへ＞＞
